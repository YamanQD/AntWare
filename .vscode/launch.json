    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "(LLDB) Launch & Debug",
            "program": "${workspaceFolder}/build/antware",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Meson: Build AntWare (Debug)",
        },
        {
            "name": "(windows) Launch & Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/antware.exe",
            "args": [
                "./scenes/sandbox.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole",
            "preLaunchTask": "Meson: Build AntWare (Debug)",
        },
        {
            "name": "(linux) Launch & Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/antware",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "preLaunchTask": "Meson: Build AntWare (Debug)",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
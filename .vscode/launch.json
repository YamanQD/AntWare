    "version": "0.2.0",
    "configurations": [
        {
            "name": "(windows) Launch & Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ant-warrior.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(linux) Launch & Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/ant-warrior",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "preLaunchTask": "Meson: Build ant-warrior",
            "linux": {
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
            }
        }
    ]
}